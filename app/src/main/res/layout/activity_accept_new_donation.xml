<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mage"
    tools:context=".AcceptNewDonation"

    >
    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/back2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo1" />

    <TextView
        android:id="@+id/dateview"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="76dp"
        android:text="Date"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/donername"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:layout_below="@id/dateview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="46dp"
        android:text="Doner Mobile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/quantityl"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/donername"
        android:layout_marginStart="50dp"
        android:layout_marginTop="63dp"
        android:text="Quantity"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dateofdonation"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="69dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/doner"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateofdonation"

        android:layout_marginStart="130dp"
        android:layout_marginTop="44dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/donernamev"
        android:layout_width="162dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-192dp"
        android:layout_marginBottom="296dp"
        android:layout_toRightOf="@id/doner"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/doner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="121dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/save"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:layout_below="@id/quantity"
        android:text="save"
        android:textColor="@color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/menu2"
        app:itemIconTint="@color/black"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>